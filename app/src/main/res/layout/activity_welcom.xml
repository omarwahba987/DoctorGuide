<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahfouz.doctorgp.WelcomActivity"
    android:background="@color/primaryLightColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/welcomLogo"
        android:text="أهــلا  بـك  في "
        android:textSize="24dp"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/welcomLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logooo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_below="@+id/welcomLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/gpicon"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/welcomLogo"
        android:text="X_Team@docguide.com"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
